.pyg_category .category_list {
  overflow: hidden;
  height: calc(100vh - 100rpx);
}
.pyg_category .category_list .category_left {
  height: 100%;
  width: 182rpx;
  background-color: #f3f3f3;
  float: left;
  /*  */
}
.pyg_category .category_list .category_left .category_left_item {
  font-size: 28rpx;
  line-height: 40rpx;
  text-align: center;
  margin-top: 37rpx;
}
.pyg_category .category_list .category_left .category_left_item:nth-child(1) {
  margin-top: 27rpx;
}
.pyg_category .category_list .category_left .active {
  color: var(--themeColor);
  border-left: 4rpx solid #EA4350;
}
.pyg_category .category_list .category_right {
  height: 100%;
  float: right;
  width: calc(100vw - 182rpx);
}
.pyg_category .category_list .category_right .categories_right_content {
  overflow: hidden;
}
.pyg_category .category_list .category_right .categories_right_content .category_right_content_title {
  font-size: 26rpx;
  text-align: center;
  margin-top: 28rpx;
  margin-bottom: 21rpx;
  color: #636363;
}
.pyg_category .category_list .category_right .categories_right_content .category_right_content_item {
  width: 33.33%;
  float: left;
  text-align: center;
}
.pyg_category .category_list .category_right .categories_right_content .category_right_content_item .image_wrapper image {
  height: 120rpx;
  width: 120rpx;
}
.pyg_category .category_list .category_right .categories_right_content .category_right_content_item .cat_name {
  font-size: 21rpx;
}
